header
    a(href="/").header__logo
        i.fab.fa-youtube
    nav 
        ul.header__list
            li  
                a(href="/search") 
                    i.fas.fa-search

            if loggedIn
                li 
                    a(href="/users/edit") Edit #{loggedInUser.username}'s Profile
                li 
                    a(href="/users/logout") Logout
                li 
                    a(href="/videos/upload") Upload video
                li 
                    a(href=`/users/${loggedInUser._id}`) 
                        if !loggedInUser.avatarUrl 
                            span.header__no-avatar ðŸ˜€
                        else 
                            if loggedInUser.avatarUrl[0] === "u"
                                img.header__avatar(src="/" + loggedInUser.avatarUrl)
                            else 
                                img.header__avatar(src=loggedInUser.avatarUrl crossorigin)
            else
                li 
                    a(href="/login") Login           
                li  
                    a(href="/join").header__btn Join
