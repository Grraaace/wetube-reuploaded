extends ../base
include ../mixins/video

block content
    div.profile__data
        if !loggedInUser.avatarUrl 
            span.header__no-avatar ðŸ˜€
        else
            if loggedInUser.avatarUrl[0]==="u"
                img(src="/" + user.avatarUrl).avatar
            else    
                img(crossorigin="anonymous" src=user.avatarUrl).avatar
        h3=user.username
    div.video-grid
        each video in user.videos
            +video(video)
        else 
            span.empty__message No Videos Found
